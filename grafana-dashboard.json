{
  "dashboard": {
    "id": null,
    "title": "School Platform Logs Dashboard",
    "tags": ["school-platform", "backend", "logs"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "graph",
        "title": "Log Levels Over Time",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "rate({job=\"school-platform-backend\"}[1m])",
            "legendFormat": "{{level}}",
            "refId": "A"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Log Rate",
            "logBase": 1
          },
          {
            "format": "short",
            "logBase": 1
          }
        ]
      },
      {
        "id": 2,
        "type": "logs",
        "title": "Recent Logs",
        "gridPos": {
          "x": 12,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "{job=\"school-platform-backend\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showLabels": true,
          "showTime": true,
          "wrapLogMessage": true
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Error Count (Last 5 minutes)",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"school-platform-backend\", level=\"error\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Warning Count (Last 5 minutes)",
        "gridPos": {
          "x": 6,
          "y": 8,
          "w": 6,
          "h": 4
        },
        "targets": [
          {
            "expr": "sum(count_over_time({job=\"school-platform-backend\", level=\"warn\"}[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          }
        }
      },
      {
        "id": 5,
        "type": "table",
        "title": "Top Error Messages",
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "topk(10, sum by (message) (count_over_time({job=\"school-platform-backend\", level=\"error\"}[1h])))",
            "refId": "A"
          }
        ],
        "options": {
          "showHeader": true
        },
        "columns": []
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    }
  }
}